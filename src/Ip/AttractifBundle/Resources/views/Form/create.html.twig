{% extends "IpAttractifBundle::layout.html.twig" %}
{% block content_header %}{{ typeOfAction }} de {{ entityType }}{% endblock %}
{% block body %}
    <div class="row">

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
            <br><br>
        </div>
    {% endfor %}

        <!-- general form elements -->
        <div>
            <!-- form start -->
                {{ form_start(form, {attr: {role: 'form'}}) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_widget(form) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">{{ bouton }}</button>
                </div>
                {{ form_end(form) }}
        </div><!-- /.box -->
    </div>
{% endblock %}