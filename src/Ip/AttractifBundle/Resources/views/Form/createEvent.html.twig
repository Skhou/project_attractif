{% extends "IpAttractifBundle::layout.html.twig" %}
{% block content_header %}{{ typeOfAction }} d'événement{% endblock %}
{% block body %}
    <div class="row">

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
                <br><br>
            </div>
        {% endfor %}

        <!-- general form elements -->
        <div>
            <div class="col-md-6">
                <!-- form start -->
                {{ form_start(form, {attr: {role: 'form'}}) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom de l\'événement') }}
                        {{ form_widget(form.name, {attr: {class: 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.place, 'Nombre de participants maximum') }}
                        <div class="input-group">
                            {{ form_widget(form.place, {attr: {class: 'form-control'}}) }}
                            {{ form_errors(form.place) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.startDate, 'Date de début de l\'événement') }}
                        <div class="input-group">
                            {{ form_widget(form.startDate, {attr: {class: 'form-control'}}) }}
                            {{ form_errors(form.startDate) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.endDate, 'Date de fin de l\'événement') }}
                        <div class="input-group">
                            {{ form_widget(form.endDate, {attr: {class: 'form-control'}}) }}
                            {{ form_errors(form.endDate) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.location, 'Lieu') }}
                        {{ form_widget(form.location, {attr: {class: 'form-control'}}) }}
                        {{ form_errors(form.location) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file, 'Image') }}
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                    <div class="form-group checkbox-product-events">
                        {{ form_label(form.products, 'Les produits pour l\'événement') }}
                        {{ form_widget(form.products, {attr: {type:'checkbox'}}) }}
                        {{ form_errors(form.products) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {attr: {class: 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">{{ bouton }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div><!-- /.box -->
    </div>
{% endblock %}