{% extends "IpAttractifBundle::layout.html.twig" %}
{% block content_header %}Liste des lieux{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive">

                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                            <br><br>
                        </div>
                    {% endfor %}

                    <table id="table_id" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Code postale</th>
                                <th>Ville</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            <tr>
                                <td>{{ location.name }}</td>
                                <td>{{ location.address }}</td>
                                <td>{{ location.zipcode }}</td>
                                <td>{{ location.city }}</td>
                                <td>
                                    <a href="{{ path("ip_attractif_edit", {"entityType": "location", "id": location.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                    {% if location.events is empty %}
                                        <a class="button_delete" href="{{ path("ip_attractif_delete", {"entityType": "location", "id": location.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


