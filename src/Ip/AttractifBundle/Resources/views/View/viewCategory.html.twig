{% extends "IpAttractifBundle::layout.html.twig" %}
{% block content_header %}Liste des cat√©gories{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive">

                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                            <br><br>
                        </div>
                    {% endfor %}

                    <table id="table_id" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.name }}</td>
                                <td>{{ category.description }}</td>
                                <td>
                                    <a href="{{ path("ip_attractif_edit", {"entityType": "category", "id": category.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                    <a class="button_delete" href="{{ path("ip_attractif_delete", {"entityType": "category", "id": category.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}